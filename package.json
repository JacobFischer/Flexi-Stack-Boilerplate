{
  "name": "wikidfox",
  "version": "0.0.1",
  "description": "Simple flat markdown Wiki using Git as a data service",
  "main": "dist/server/index.js",
  "repository": "git@github.com:JacobFischer/WikidFox.git",
  "author": "Jacob Fischer <jacob.t.fischer@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/plugin-proposal-optional-catch-binding": "7.2.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-runtime": "7.4.4",
    "@babel/polyfill": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "@babel/preset-react": "7.0.0",
    "@hot-loader/react-dom": "16.8.6",
    "@types/cors": "2.8.5",
    "@types/express": "4.16.1",
    "@types/fs-extra": "5.1.0",
    "@types/html-webpack-plugin": "3.2.0",
    "@types/jest": "24.0.13",
    "@types/node": "12.0.0",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "@types/react-loadable": "5.5.1",
    "@types/react-router-dom": "4.3.3",
    "@types/react-test-renderer": "^16.8.1",
    "@types/webpack": "4.4.31",
    "babel-loader": "8.0.6",
    "cors": "2.8.5",
    "express": "4.16.4",
    "fs-extra": "8.0.1",
    "html-webpack-plugin": "3.2.0",
    "http-server": "0.11.1",
    "isomorphic-git": "0.54.2",
    "jest": "24.8.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-hot-loader": "4.8.4",
    "react-loadable": "^5.5.0",
    "react-markdown": "4.0.8",
    "react-router-dom": "5.0.0",
    "react-test-renderer": "^16.8.6",
    "shx": "0.3.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "6.0.0",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "typescript": "3.4.5",
    "webpack": "4.31.0",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.3.1"
  },
  "scripts": {
    "start": "npm run start:server",
    "start:client": "http-server ./dist/client",
    "start:server": "node ./dist/server/",
    "dev": "webpack-dev-server --hot --mode development",
    "build": "npm run build:client && npm run build:server",
    "build:server": "tsc -p src/server/tsconfig.json",
    "build:client": "npm run build:client:dev",
    "build:client:dev": "npm run build:client:webpack -- --config src/client/webpack.config.ts --mode development",
    "build:client:prod": "npm run build:client:webpack -- --config src/client/webpack.config.ts --mode production",
    "build:client:webpack": "webpack --progress --colors",
    "rebuild": "npm run clean && npm run build",
    "clean": "shx rm -rf .cache/ dist/",
    "purge": "shx rm -rf node_modules/",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "tslint --project src/client/tsconfig.json --config tslint.json",
    "lint:server": "tslint --project src/server/tsconfig.json --config tslint.json",
    "test": "jest"
  }
}
