{
  "name": "spa-boilerplate",
  "version": "0.0.1",
  "description": "Simple flat markdown Wiki using Git as a data service",
  "main": "dist/index.js",
  "repository": "git@github.com:JacobFischer/WikidFox.git",
  "author": "Jacob Fischer <jacob.t.fischer@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@hot-loader/react-dom": "16.8.6",
    "@types/html-webpack-plugin": "3.2.0",
    "@types/node": "12.0.0",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "@types/webpack": "4.4.31",
    "html-webpack-plugin": "3.2.0",
    "http-server": "0.11.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-hot-loader": "4.8.4",
    "shx": "0.3.2",
    "ts-loader": "6.0.0",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "typescript": "3.4.5",
    "webpack": "4.31.0",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.3.1"
  },
  "scripts": {
    "start": "http-server ./dist",
    "dev": "webpack-dev-server --hot --mode development",
    "build": "npm run build:dev",
    "build:dev": "npm run build:webpack -- --mode development",
    "build:prod": "npm run build:webpack -- --mode production",
    "build:webpack": "webpack --progress --colors",
    "clean": "shx rm -rf .cache/ dist/",
    "purge": "shx rm -rf node_modules/"
  }
